{
	"margo_oom": 2000,

	"env": {
		"GOPATH": "$HOME/go",
		"PATH": "$GOPATH/bin:$PATH",
	},

	"autocomplete_tests": true,
	"autocomplete_builtins": true,
	"autocomplete_closures": true,
	"autocomplete_suggest_imports": true,
	"use_named_imports": true,

	"fmt_cmd": [
		"goimports"
	],

	"on_save": [{
		"cmd": "gs9o_open",
		"args": {
			"run": ["sh", "go build . errors && go vet && go tool vet *.go && go tool vet -shadow *.go" ],
			"focus_view": false
		}
	}]
}
